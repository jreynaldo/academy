<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.solution.sales.product.domain.Product" table="products">
        <composite-id name="id" class="com.solution.sales.product.domain.ProductId" access="field">
            <key-property column="id" name="value" length="36" access="field" />
        </composite-id>

        <component name="codigo" class="com.solution.sales.product.domain.ProductCodigo" access="field">
            <property name="value" column="codigo" type="string" access="field" />
        </component>

        <component name="nombre" class="com.solution.sales.product.domain.ProductNombre" access="field">
            <property name="value" column="nombre" type="string" access="field" />
        </component>
        <component name="descripcion" class="com.solution.sales.product.domain.ProductDescripcion" access="field">
            <property name="value" column="descripcion" type="string" access="field" />
        </component>
        <component name="imagen" class="com.solution.sales.product.domain.ProductImagen" access="field">
            <property name="value" column="imagen" type="string" access="field" />
        </component>
        <component name="categoriaId" class="com.solution.sales.product.domain.ProductCategoriaId" access="field">
            <property name="value" column="categoriaId" type="string" access="field" />
        </component>
        <component name="presentacionId" class="com.solution.sales.product.domain.ProductPresentacionId" access="field">
            <property name="value" column="presentacionId" type="string" access="field" />
        </component>


        <component name="createdBy" class="com.solution.shared.domain.DomainCreatedBy" access="field">
            <property name="value" column="createdBy" type="java.lang.String" access="field" />
        </component>
        <component name="createdDate" class="com.solution.shared.domain.DomainCreatedDate" access="field">
            <property name="value" column="createdDate" type="java.time.Instant" access="field" />
        </component>

        <component name="lastModifiedBy" class="com.solution.shared.domain.DomainLastModifiedBy" access="field">
            <property name="value" column="lastModifiedBy" type="java.lang.String" access="field" />
        </component>
        <component name="lastModifiedDate" class="com.solution.shared.domain.DomainLastModifiedDate" access="field">
            <property name="value" column="lastModifiedDate" type="java.time.Instant" access="field" />
        </component>
    </class>
</hibernate-mapping>
